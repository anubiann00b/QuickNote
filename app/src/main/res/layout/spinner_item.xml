<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="?android:attr/spinnerItemStyle"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/spinner_item_delete"
        android:layout_width="@dimen/spinner_size"
        android:layout_height="@dimen/spinner_size"
        android:background="@drawable/ic_close_white_48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/spinner_item_edit"
        android:layout_width="@dimen/spinner_size"
        android:layout_height="@dimen/spinner_size"
        android:background="@drawable/ic_create_white_48dp"
        android:layout_toLeftOf="@id/spinner_item_delete"
        android:layout_toStartOf="@id/spinner_item_delete" />

    <TextView
        android:ellipsize="marquee"
        android:id="@+id/spinner_item_content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/spinner_item_edit"
        android:layout_toLeftOf="@id/spinner_item_edit"/>

</RelativeLayout>